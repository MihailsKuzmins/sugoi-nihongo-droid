<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel" type="lv.latvijaff.sugoinihongo.features.word.WordDetailReadViewModel"/>
    </data>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.word.WordDetailReadFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Id -->
            <include
                layout="@layout/detail_item_text_view"
                bind:detailItem="@{viewModel.idItem}"/>

            <include layout="@layout/detail_item_separator"/>

            <!-- English -->
            <include
                layout="@layout/detail_item_text_view"
                bind:detailItem="@{viewModel.englishItem}"/>

            <include layout="@layout/detail_item_separator"/>

            <!-- Translation -->
            <include
                layout="@layout/detail_item_text_view"
                bind:detailItem="@{viewModel.translationItem}"/>

            <include
                layout="@layout/detail_item_separator"
                bind:isVisible="@{viewModel.transcriptionItem.isVisible}"/>

            <!-- Transcription -->
            <include
                layout="@layout/detail_item_text_view"
                bind:detailItem="@{viewModel.transcriptionItem}"/>

            <include
                layout="@layout/detail_item_separator"
                bind:isVisible="@{viewModel.notesItem.isVisible}"/>

            <!-- Notes -->
            <include
                layout="@layout/detail_item_text_view"
                bind:detailItem="@{viewModel.notesItem}"/>
        </LinearLayout>
    </ScrollView>
</layout>