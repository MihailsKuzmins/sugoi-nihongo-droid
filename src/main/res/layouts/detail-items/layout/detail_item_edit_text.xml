<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="detailItem" type="lv.latvijaff.sugoinihongo.ui.detailitems.DetailItemEditText"/>
    </data>

    <com.google.android.material.textfield.TextInputLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/detail_item_edit_text"
        android:hint="@{detailItem.hint}">

        <EditText
            android:id="@+id/detail_item_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="no"
            android:inputType="@{detailItem.inputType}"
            android:text="@={detailItem.value}"
            android:textSize="@dimen/detail_view_text_size" />
    </com.google.android.material.textfield.TextInputLayout>
</layout>